<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carrentalproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarRentalProject">
        <activity android:name=".Common.LoginSignup.SelectScreen"></activity>
        <activity android:name=".Common.LoginSignup.RentingDetails" />
        <activity android:name=".Common.LoginSignup.SearchScreen" />
        <activity android:name=".Common.LoginSignup.SigninScreen" />
        <activity android:name=".Common.LoginSignup.SignupScreen" />
        <activity android:name=".Common.LoginSignup.HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>